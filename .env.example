# Cat Protocol Configuration
# Copy this file to .env.local for local development
# Or set these in your Vercel dashboard under Settings â†’ Environment Variables

# ===== CAT BEHAVIOR =====
# Size of cat sprites in pixels
CAT_SIZE=32

# Number of cats needed to activate triangle protocol
CAT_TRIANGLE_THRESHOLD=6

# Duration of animations in milliseconds
CAT_ANIMATION_DURATION=3000

# Probability of cats blinking (0.0 to 1.0)
CAT_BLINK_PROBABILITY=0.3

# Radius of triangle formation in pixels
TRIANGLE_RADIUS=100

# ===== AUDIO SETTINGS =====
# Base frequency for meow sounds
AUDIO_MEOW_BASE=200

# Frequency range for meow variations
AUDIO_MEOW_RANGE=300

# Ambient sound base frequency
AUDIO_AMBIENT_BASE=150

# Special effect sound frequency
AUDIO_SPECIAL_BASE=400

# ===== THEME CUSTOMIZATION =====
# Primary background color (hex)
THEME_PRIMARY_BG=#000000

# Primary text color (hex)
THEME_PRIMARY_TEXT=#ffffff

# Border color (hex)
THEME_BORDER_COLOR=#ffffff

# CRT scanline effect opacity (0.0 to 1.0)
THEME_SCANLINE_OPACITY=0.1

# ===== FEATURE FLAGS =====
# Enable/disable audio system
ENABLE_AUDIO=true

# Enable/disable CRT scanline effect
ENABLE_SCANLINES=true

# Enable/disable cat blinking animations
ENABLE_BLINKING=true

# Enable/disable analytics tracking
ENABLE_ANALYTICS=false

# ===== ANALYTICS =====
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics domain
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# ===== VERCEL DEPLOYMENT =====
# These are automatically set by Vercel
# VERCEL_URL=your-app.vercel.app
# VERCEL_ENV=production
# VERCEL_REGION=iad1

# ===== DEVELOPMENT =====
# For local development
NODE_ENV=development